{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src", "types"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
